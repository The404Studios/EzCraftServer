<UserControl x:Class="EzCraftModManager.Views.ServerManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Loaded="UserControl_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server Creation Panel -->
        <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Create New Server" FontSize="20" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>

                    <!-- Server Name -->
                    <TextBlock Text="Server Name" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,16"/>

                    <!-- Minecraft Version -->
                    <TextBlock Text="Minecraft Version" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding MinecraftVersions}"
                              SelectedItem="{Binding SelectedMinecraftVersion}"
                              DisplayMemberPath="Id" Margin="0,0,0,16"/>

                    <!-- Forge Version -->
                    <TextBlock Text="Forge Version" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding ForgeVersions}"
                              SelectedItem="{Binding SelectedForgeVersion}" Margin="0,0,0,16">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ForgeVersion}"/>
                                    <TextBlock Text=" (Recommended)" Foreground="{StaticResource AccentBrush}"
                                               Visibility="{Binding IsRecommended, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text=" (Latest)" Foreground="{StaticResource WarningBrush}"
                                               Visibility="{Binding IsLatest, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Max Players -->
                    <TextBlock Text="Max Players" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="2" Maximum="100"
                                Value="{Binding NewProfileMaxPlayers}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding NewProfileMaxPlayers}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- RAM Allocation -->
                    <TextBlock Text="RAM Allocation (GB)" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="2" Maximum="32"
                                Value="{Binding NewProfileRam}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="{Binding NewProfileRam}"/>
                            <Run Text=" GB"/>
                        </TextBlock>
                    </Grid>

                    <!-- Game Mode -->
                    <TextBlock Text="Game Mode" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding GameModes}"
                              SelectedItem="{Binding NewProfileGameMode}" Margin="0,0,0,16"/>

                    <!-- Difficulty -->
                    <TextBlock Text="Difficulty" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding Difficulties}"
                              SelectedItem="{Binding NewProfileDifficulty}" Margin="0,0,0,16"/>

                    <!-- PvP -->
                    <CheckBox Content="Enable PvP" IsChecked="{Binding NewProfilePvP}"
                              Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                    <!-- Operator Username -->
                    <TextBlock Text="Operator Username (Optional)" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding NewProfileOperator, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,16"/>

                    <!-- Install Path -->
                    <TextBlock Text="Installation Path" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                 Text="{Binding NewProfilePath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Grid.Column="1" Content="Browse" Style="{StaticResource SecondaryButton}"
                                Command="{Binding BrowseForPathCommand}" Margin="8,0,0,0" Padding="12,10"/>
                    </Grid>

                    <!-- Progress -->
                    <StackPanel Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,0,0,16">
                        <ProgressBar Value="{Binding InstallProgress}" Maximum="100"
                                     Style="{StaticResource ModernProgressBar}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding InstallStatus}" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Create Button -->
                    <Button Content="Create Server" Style="{StaticResource AccentButton}"
                            Command="{Binding CreateServerCommand}"
                            IsEnabled="{Binding IsInstalling, Converter={StaticResource InverseBooleanConverter}}"
                            FontSize="16" Padding="0,14"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorBrush}"
                               Margin="0,12,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Existing Servers and Mods -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Server Profiles -->
            <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Your Servers" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding DataContext.Profiles, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectedItem="{Binding SelectedProfile}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceLightBrush}"
                                        CornerRadius="8" Margin="0,4" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding MinecraftVersion}" FontSize="12"
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                <TextBlock Text=" - Forge " FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding ForgeVersion}" FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0">
                                                <Run Text="{Binding InstalledMods.Count, Mode=OneWay}"/>
                                                <Run Text=" mods installed"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="â–¶" Style="{StaticResource AccentButton}" Margin="0,0,8,0"
                                                    Padding="12,8" FontSize="12"
                                                    Command="{Binding DataContext.StartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="ðŸ“" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                                    Padding="12,8" FontSize="12"
                                                    Command="{Binding DataContext.OpenServerFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="ðŸ—‘" Style="{StaticResource SecondaryButton}"
                                                    Padding="12,8" FontSize="12"
                                                    Command="{Binding DataContext.DeleteServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Installed Mods -->
            <Border Grid.Row="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Installed Mods" FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Refresh" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                    Command="{Binding RefreshInstalledModsCommand}" Padding="12,6"/>
                            <Button Content="Open Mods Folder" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding OpenModsFolderCommand}" Padding="12,6"/>
                        </StackPanel>
                    </Grid>

                    <ListBox Grid.Row="1" ItemsSource="{Binding InstalledMods}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,2" Padding="8"
                                        Background="{StaticResource SurfaceLightBrush}" CornerRadius="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}"
                                                  Command="{Binding DataContext.ToggleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" Text="{Binding Name}" Margin="12,0"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"/>

                                        <Button Grid.Column="2" Content="Delete" Padding="8,4"
                                                Style="{StaticResource SecondaryButton}" FontSize="11"
                                                Command="{Binding DataContext.DeleteModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <TextBlock Grid.Row="1" Text="No mods installed. Browse mods to get started!"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding InstalledMods.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
