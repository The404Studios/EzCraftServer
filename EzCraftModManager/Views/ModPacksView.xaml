<UserControl x:Class="EzCraftModManager.Views.ModPacksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pack List -->
        <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Curated Mod Packs" FontSize="20" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Pre-configured mod collections for popular themes"
                               FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Version Selector -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="Target Version" FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding AvailableVersions}"
                              SelectedItem="{Binding SelectedVersion}"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <ListBox Grid.Row="2" ItemsSource="{Binding ModPacks}"
                         SelectedItem="{Binding SelectedPack}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SurfaceLightBrush}"
                                    CornerRadius="12" Margin="0,4" Padding="16" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Pack Icon -->
                                    <Border Grid.Column="0" Width="48" Height="48"
                                            Background="{StaticResource SurfaceBrush}" CornerRadius="8">
                                        <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Id}" Value="zombie-survival">
                                                            <Setter Property="Text" Value="ðŸ§Ÿ"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Id}" Value="guns-weapons">
                                                            <Setter Property="Text" Value="ðŸ”«"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Id}" Value="horror-craft">
                                                            <Setter Property="Text" Value="ðŸ‘»"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Id}" Value="ultimate-apocalypse">
                                                            <Setter Property="Text" Value="ðŸ’€"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Category}" FontSize="11"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0">
                                            <Run Text="{Binding Mods.Count, Mode=OneWay}"/>
                                            <Run Text=" mods"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Pack Details -->
        <Border Grid.Column="1" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Server Selection Warning -->
                <Border Grid.Row="0" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasServerSelected}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding ServerSelectionMessage}"
                                   FontWeight="SemiBold" Foreground="#1E1E1E" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="Select Server" Style="{StaticResource SecondaryButton}"
                                Command="{Binding GoToServerManagerCommand}" Padding="12,6"
                                Visibility="{Binding HasServerSelected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                    </Grid>
                </Border>

                <!-- Pack Header -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <TextBlock Text="{Binding SelectedPack.Name, TargetNullValue='Select a Mod Pack'}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding SelectedPack.Description}" FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"
                               TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Select All" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                Command="{Binding SelectAllModsCommand}" Padding="12,6"/>
                        <Button Content="Required Only" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                Command="{Binding SelectRequiredOnlyCommand}" Padding="12,6"/>
                        <Button Content="Deselect All" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                Command="{Binding DeselectAllModsCommand}" Padding="12,6"/>
                        <Button Content="Refresh" Style="{StaticResource SecondaryButton}"
                                Command="{Binding RefreshPackCommand}" Padding="12,6"/>
                    </StackPanel>

                    <TextBlock Margin="0,12,0,0" Foreground="{StaticResource AccentBrush}">
                        <Run Text="Found:"/>
                        <Run Text="{Binding ModsFound, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding ModsTotal, Mode=OneWay}"/>
                        <Run Text=" mods for version"/>
                        <Run Text="{Binding SelectedVersion, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Loading Indicator -->
                <Border Grid.Row="2" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}" CornerRadius="8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Loading mods..." FontSize="16"
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Width="200" Margin="0,12,0,0"
                                     Style="{StaticResource ModernProgressBar}"/>
                    </StackPanel>
                </Border>

                <!-- Mod List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                    <ItemsControl ItemsSource="{Binding PackMods}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceLightBrush}"
                                        CornerRadius="8" Margin="0,4" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"
                                                  IsEnabled="{Binding IsAvailable}"
                                                  VerticalAlignment="Center"/>

                                        <!-- Icon -->
                                        <Border Grid.Column="1" Width="40" Height="40" CornerRadius="6"
                                                Background="{StaticResource SurfaceBrush}" Margin="12,0,0,0">
                                            <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="2" Margin="12,0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <!-- Required Tag -->
                                                <Border Background="{StaticResource WarningBrush}"
                                                        CornerRadius="4" Padding="6,2" Margin="8,0,0,0"
                                                        Visibility="{Binding IsRequired, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Required" FontSize="10" FontWeight="SemiBold"
                                                               Foreground="#1E1E1E"/>
                                                </Border>
                                                <!-- Source Tag -->
                                                <Border Background="{StaticResource PrimaryBrush}"
                                                        CornerRadius="4" Padding="6,2" Margin="4,0,0,0"
                                                        Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding SourceText}" FontSize="10" FontWeight="SemiBold"
                                                               Foreground="#FFFFFF"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                            <!-- Version Tags -->
                                            <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,4,0,0"
                                                       Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Run Text="Versions:"/>
                                                <Run Text="{Binding GameVersions, Mode=OneWay}"/>
                                            </TextBlock>
                                            <!-- Download Count -->
                                            <TextBlock Text="{Binding DownloadCountText}" FontSize="10"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <!-- Status -->
                                        <Border Grid.Column="3" Padding="8,4" CornerRadius="4" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Available">
                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Installed!">
                                                            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Queued for download">
                                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Available">
                                                                <Setter Property="Foreground" Value="#1E1E1E"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Installed!">
                                                                <Setter Property="Foreground" Value="#1E1E1E"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Queued for download">
                                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Install Button -->
                <StackPanel Grid.Row="3" Margin="0,16,0,0">
                    <!-- Progress -->
                    <StackPanel Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,0,0,12">
                        <ProgressBar Value="{Binding InstallProgress}" Maximum="100"
                                     Style="{StaticResource ModernProgressBar}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding InstallStatus}" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <Button Content="Install Selected Mods" Style="{StaticResource AccentButton}"
                            Command="{Binding InstallPackCommand}" FontSize="16" Padding="24,14"
                            IsEnabled="{Binding HasServerSelected}"/>

                    <!-- Status Messages -->
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AccentBrush}"
                               Margin="0,8,0,0" TextWrapping="Wrap"
                               Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorBrush}"
                               Margin="0,8,0,0" TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
