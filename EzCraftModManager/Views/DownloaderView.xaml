<UserControl x:Class="EzCraftModManager.Views.DownloaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100">

    <UserControl.Resources>
        <!-- Matrix green color -->
        <Color x:Key="MatrixGreen">#00FF41</Color>
        <Color x:Key="MatrixGreenDark">#008F11</Color>
        <SolidColorBrush x:Key="MatrixGreenBrush" Color="{StaticResource MatrixGreen}"/>
        <SolidColorBrush x:Key="MatrixGreenDarkBrush" Color="{StaticResource MatrixGreenDark}"/>

        <!-- Glow effect -->
        <DropShadowEffect x:Key="GlowEffect" Color="{StaticResource MatrixGreen}"
                          BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>

        <!-- Download item card style with hover effect -->
        <Style x:Key="DownloadCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16213E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#0F3460"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource MatrixGreenBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                              BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cart item style -->
        <Style x:Key="CartItemCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="BorderBrush" Value="#0F3460"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource MatrixGreenBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animated progress bar -->
        <Style x:Key="MatrixProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="#0D0D0D" CornerRadius="3"/>
                            <Border x:Name="PART_Track" CornerRadius="3">
                                <Border x:Name="PART_Indicator" HorizontalAlignment="Left" CornerRadius="3">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{StaticResource MatrixGreenDark}" Offset="0"/>
                                            <GradientStop Color="{StaticResource MatrixGreen}" Offset="0.5"/>
                                            <GradientStop Color="{StaticResource MatrixGreenDark}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                                          BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Matrix Button Style -->
        <Style x:Key="MatrixButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MatrixGreenBrush}"/>
            <Setter Property="Foreground" Value="#0D0D0D"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                                  BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FF66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0D0D0D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Matrix Style -->
        <Border Grid.Row="0" Padding="24,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0D0D0D" Offset="0"/>
                    <GradientStop Color="#1A1A2E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="32" FontWeight="Bold" Foreground="{StaticResource MatrixGreenBrush}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                              BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                        <Run Text="STANDALONE"/>
                        <Run Text=" DOWNLOADS" Foreground="#FFFFFF"/>
                    </TextBlock>
                    <TextBlock Text="Download mods to any folder without a server"
                               FontSize="14" Foreground="#666666" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Stats Panel -->
                <Border Grid.Column="1" Background="#1A1A2E" CornerRadius="12" Padding="20,12">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock Text="{Binding DownloadQueue.TotalQueued}" FontSize="28" FontWeight="Bold"
                                       Foreground="{StaticResource MatrixGreenBrush}"/>
                            <TextBlock Text="QUEUED" FontSize="10" Foreground="#666666" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock Text="{Binding DownloadQueue.TotalCompleted}" FontSize="28" FontWeight="Bold"
                                       Foreground="#00E676"/>
                            <TextBlock Text="COMPLETE" FontSize="10" Foreground="#666666" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding DownloadQueue.TotalFailed}" FontSize="28" FontWeight="Bold"
                                       Foreground="#FF5252"/>
                            <TextBlock Text="FAILED" FontSize="10" Foreground="#666666" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Standalone Cart & Folder Selection -->
        <Border Grid.Row="1" Padding="24,0,24,16" Background="#0D0D0D">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Download Folder Selection -->
                <Border Grid.Column="0" Background="#1A1A2E" CornerRadius="12" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ðŸ“" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="DOWNLOAD FOLDER" FontSize="10" Foreground="#666666" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding StandaloneDownloadFolder}" FontSize="13"
                                       Foreground="{StaticResource MatrixGreenBrush}" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding StandaloneDownloadFolder}"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="Browse" Padding="16,8" Margin="12,0,8,0"
                                Command="{Binding BrowseFolderCommand}"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3D3D3D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3" Content="Open Folder" Padding="16,8"
                                Command="{Binding OpenDownloadFolderCommand}"
                                Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3D3D3D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Standalone Cart Summary -->
                <Border Grid.Column="1" Background="#1A1A2E" CornerRadius="12" Padding="16" Margin="16,0,0,0" MinWidth="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸ›’" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="STANDALONE CART" FontSize="12" FontWeight="Bold"
                                       Foreground="{StaticResource MatrixGreenBrush}" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource MatrixGreenBrush}" CornerRadius="10"
                                    Padding="8,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding StandaloneCartCount}" FontSize="11" FontWeight="Bold"
                                           Foreground="#0D0D0D"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Download All" Padding="16,8" Margin="0,0,8,0"
                                    Style="{StaticResource MatrixButton}"
                                    Command="{Binding DownloadStandaloneCartCommand}"/>
                            <Button Content="Clear Cart" Padding="16,8"
                                    Command="{Binding ClearStandaloneCartCommand}"
                                    Background="#2D2D2D" Foreground="#888888" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3D3D3D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Overall Progress Bar -->
        <Border Grid.Row="2" Padding="24,0,24,20" Background="#0D0D0D"
                Visibility="{Binding DownloadQueue.IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <TextBlock Text="{Binding DownloadQueue.CurrentStatus}"
                               Foreground="{StaticResource MatrixGreenBrush}" FontSize="13"/>
                    <TextBlock HorizontalAlignment="Right" Foreground="#888888" FontSize="13">
                        <Run Text="{Binding DownloadQueue.OverallProgress, StringFormat={}{0:F0}, Mode=OneWay}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Grid>
                <ProgressBar Value="{Binding DownloadQueue.OverallProgress, Mode=OneWay}" Maximum="100"
                             Style="{StaticResource MatrixProgressBar}" Height="8"/>
            </StackPanel>
        </Border>

        <!-- Download Items Grid -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Padding="24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Downloads Column -->
                <StackPanel Grid.Column="0">
                    <Border Background="#1A1A2E" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="{StaticResource MatrixGreenBrush}" Margin="0,0,10,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                                      BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="ACTIVE DOWNLOADS" FontWeight="Bold" FontSize="13"
                                       Foreground="{StaticResource MatrixGreenBrush}"/>
                            <Border Background="{StaticResource MatrixGreenBrush}" CornerRadius="10"
                                    Padding="8,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding DownloadQueue.ActiveDownloads.Count}"
                                           FontSize="11" FontWeight="Bold" Foreground="#0D0D0D"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <ItemsControl ItemsSource="{Binding DownloadQueue.ActiveDownloads}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource DownloadCard}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Mod Header -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="48"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Mod Icon with glow animation when downloading -->
                                            <Border Grid.Column="0" Width="44" Height="44" CornerRadius="8"
                                                    Background="#0F3460">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="{StaticResource MatrixGreen}"
                                                                      BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                                                </Border.Effect>
                                                <Image Source="{Binding Mod.IconUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                <TextBlock Text="{Binding Mod.Name}" FontWeight="Bold" FontSize="15"
                                                           Foreground="#FFFFFF" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Foreground="#888888" FontSize="11">
                                                    <Run Text="by"/>
                                                    <Run Text="{Binding Mod.Author}" Foreground="{StaticResource MatrixGreenBrush}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Status & Speed -->
                                        <Grid Grid.Row="1" Margin="0,12,0,0">
                                            <TextBlock Text="{Binding StatusText}" FontSize="12"
                                                       Foreground="{StaticResource MatrixGreenBrush}"/>
                                            <TextBlock HorizontalAlignment="Right" FontSize="12" Foreground="#888888">
                                                <Run Text="{Binding SpeedText}"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Progress Bar with Matrix Animation -->
                                        <Grid Grid.Row="2" Margin="0,8,0,0">
                                            <ProgressBar Value="{Binding Progress}" Maximum="100"
                                                         Style="{StaticResource MatrixProgressBar}"/>
                                        </Grid>

                                        <!-- File Info -->
                                        <Grid Grid.Row="3" Margin="0,10,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“„" FontSize="12" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding FileName, TargetNullValue='Waiting...'}"
                                                           FontSize="11" Foreground="#555555" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <TextBlock HorizontalAlignment="Right" FontSize="11" Foreground="#555555">
                                                <Run Text="{Binding BytesDownloaded, Converter={StaticResource BytesToStringConverter}}"/>
                                                <Run Text=" / "/>
                                                <Run Text="{Binding FileSize, Converter={StaticResource BytesToStringConverter}}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border Background="#1A1A2E" CornerRadius="12" Padding="40" Margin="0,12,0,0"
                            Visibility="{Binding DownloadQueue.ActiveDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="â¬‡ï¸" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="No active downloads" FontSize="14" Foreground="#555555"
                                       HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <TextBlock Text="Add mods to cart from Browse Mods and click Download All" FontSize="12"
                                       Foreground="#444444" HorizontalAlignment="Center" Margin="0,4,0,0"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column: Cart Items + Completed/Failed -->
                <StackPanel Grid.Column="2">
                    <!-- Standalone Cart Items -->
                    <Border Background="#1A2E2E" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ›’" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="CART ITEMS" FontWeight="Bold" FontSize="13" Foreground="#00CED1"/>
                            <Border Background="#00CED1" CornerRadius="10" Padding="8,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding StandaloneCart.Count}"
                                           FontSize="11" FontWeight="Bold" Foreground="#0D0D0D"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <ItemsControl ItemsSource="{Binding StandaloneCart}" MaxHeight="200">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CartItemCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6"
                                                Background="#0F3460">
                                            <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"
                                                       Foreground="#FFFFFF" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Author}" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="âœ•" Padding="8,4" FontSize="12"
                                                Background="Transparent" Foreground="#FF5252" BorderThickness="0"
                                                Cursor="Hand" VerticalAlignment="Center"
                                                Command="{Binding DataContext.RemoveFromStandaloneCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Remove from cart">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3A1A1A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty Cart State -->
                    <Border Background="#1A2E2E" CornerRadius="8" Padding="20" Margin="0,0,0,16"
                            Visibility="{Binding StandaloneCart.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <TextBlock Text="Cart is empty. Add mods from Browse Mods!" FontSize="12"
                                   Foreground="#666666" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Completed Section -->
                    <Border Background="#1A2E1A" CornerRadius="8" Padding="12" Margin="0,12,0,16">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#00E676" Margin="0,0,10,0"/>
                            <TextBlock Text="COMPLETED" FontWeight="Bold" FontSize="13" Foreground="#00E676"/>
                            <Border Background="#00E676" CornerRadius="10" Padding="8,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding DownloadQueue.CompletedDownloads.Count}"
                                           FontSize="11" FontWeight="Bold" Foreground="#0D0D0D"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <ItemsControl ItemsSource="{Binding DownloadQueue.CompletedDownloads}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0F1F0F" BorderBrush="#1A3A1A" BorderThickness="1"
                                        CornerRadius="10" Padding="14" Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6"
                                                Background="#1A3A1A">
                                            <Image Source="{Binding Mod.IconUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Mod.Name}" FontWeight="SemiBold" FontSize="13"
                                                       Foreground="#FFFFFF" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding FileName}" FontSize="10" Foreground="#4A7A4A"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="âœ“" FontSize="18" FontWeight="Bold"
                                                   Foreground="#00E676" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Failed Section -->
                    <Border Background="#2E1A1A" CornerRadius="8" Padding="12" Margin="0,20,0,16"
                            Visibility="{Binding DownloadQueue.FailedDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#FF5252" Margin="0,0,10,0"/>
                            <TextBlock Text="FAILED" FontWeight="Bold" FontSize="13" Foreground="#FF5252"/>
                            <Border Background="#FF5252" CornerRadius="10" Padding="8,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding DownloadQueue.FailedDownloads.Count}"
                                           FontSize="11" FontWeight="Bold" Foreground="#FFFFFF"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <ItemsControl ItemsSource="{Binding DownloadQueue.FailedDownloads}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F0F0F" BorderBrush="#3A1A1A" BorderThickness="1"
                                        CornerRadius="10" Padding="14" Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6"
                                                Background="#3A1A1A">
                                            <Image Source="{Binding Mod.IconUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Mod.Name}" FontWeight="SemiBold" FontSize="13"
                                                       Foreground="#FFFFFF" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding ErrorMessage}" FontSize="10" Foreground="#FF5252"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="Retry" Padding="10,4" FontSize="11"
                                                Background="#FF5252" Foreground="#FFFFFF" BorderThickness="0"
                                                Cursor="Hand" VerticalAlignment="Center"
                                                Command="{Binding DataContext.RetryDownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Visibility="{Binding CanRetry, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF7272"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="4" Background="#1A1A2E" Padding="24,16">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Clear Completed" Padding="16,10" Margin="0,0,12,0"
                            Background="#2D2D2D" Foreground="#FFFFFF" BorderThickness="0" Cursor="Hand"
                            Command="{Binding ClearCompletedDownloadsCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3D3D3D"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Retry All Failed" Padding="16,10" Margin="0,0,12,0"
                            Background="#FF5252" Foreground="#FFFFFF" BorderThickness="0" Cursor="Hand"
                            Command="{Binding RetryAllFailedCommand}"
                            Visibility="{Binding DownloadQueue.FailedDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF7272"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Cancel All" Padding="16,10"
                            Background="#333333" Foreground="#888888" BorderThickness="0" Cursor="Hand"
                            Command="{Binding CancelAllDownloadsCommand}"
                            Visibility="{Binding DownloadQueue.IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#444444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Status Messages -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{StaticResource MatrixGreenBrush}"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding ErrorMessage}" FontSize="12" Foreground="#FF5252"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
