<Window x:Class="EzCraftModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EzCraftModManager.ViewModels"
        xmlns:views="clr-namespace:EzCraftModManager.Views"
        mc:Ignorable="d"
        Title="EzCraft Mod Manager"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundDarkBrush}" CornerRadius="12" BorderBrush="{StaticResource SurfaceLightBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="16,0">
                        <TextBlock Text="EzCraft Mod Manager" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Text=" - " Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentViewName}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Download Queue Indicator in Title Bar -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding DownloadQueue.IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¬‡ï¸" FontSize="12" Margin="0,0,6,0"/>
                                <TextBlock FontSize="12" Foreground="#FFFFFF" FontWeight="SemiBold">
                                    <Run Text="Downloading:"/>
                                    <Run Text="{Binding DownloadQueue.TotalCompleted, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding DownloadQueue.TotalQueued, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <ProgressBar Value="{Binding DownloadQueue.OverallProgress}" Maximum="100"
                                     Width="120" Height="6" Style="{StaticResource ModernProgressBar}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="â€”" Style="{StaticResource NavButton}" Click="MinimizeButton_Click" Width="46"/>
                        <Button Content="â–¡" Style="{StaticResource NavButton}" Click="MaximizeButton_Click" Width="46"/>
                        <Button Content="âœ•" Style="{StaticResource NavButton}" Click="CloseButton_Click" Width="46"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="{StaticResource BackgroundBrush}" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,24">
                            <TextBlock Text="EzCraft" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="Mod Manager v2.0" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Navigation -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,4">
                            <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToHomeCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ " FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Home" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToModBrowserCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Browse Mods" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToModPacksCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Mod Packs" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToServerManagerCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ–¥ï¸" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Server Manager" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToSettingsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Settings" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Download Queue Button -->
                        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="12" Margin="0,8,0,0">
                            <Button Style="{StaticResource SecondaryButton}" Command="{Binding ToggleDownloadQueueCommand}" Padding="8,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="â¬‡ï¸" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Downloads" VerticalAlignment="Center"/>
                                    <Border Grid.Column="2" Background="{StaticResource PrimaryBrush}" CornerRadius="10" Padding="8,2" MinWidth="24"
                                            Visibility="{Binding DownloadQueue.IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding DownloadQueue.ActiveDownloads.Count}" FontSize="11" FontWeight="Bold"
                                                   Foreground="#FFFFFF" HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Button>
                        </Border>

                        <!-- Server Selector -->
                        <Border Grid.Row="3" Style="{StaticResource Card}" Padding="12" Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="Active Server" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding Profiles}"
                                          SelectedItem="{Binding SelectedProfile}"
                                          DisplayMemberPath="Name"
                                          Style="{StaticResource ModernComboBox}"/>

                                <!-- Empty state message -->
                                <TextBlock Text="No servers created yet"
                                           FontSize="11"
                                           Foreground="{StaticResource WarningBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"
                                           Visibility="{Binding Profiles.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>

                                <TextBlock Text="{Binding StatusMessage}"
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"
                                           Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Border Grid.Column="1" Padding="24">
                    <ContentControl Content="{Binding CurrentView}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                                <views:HomeView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type vm:ModBrowserViewModel}">
                                <views:ModBrowserView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type vm:ModPacksViewModel}">
                                <views:ModPacksView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type vm:ServerManagerViewModel}">
                                <views:ServerManagerView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                                <views:SettingsView/>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </Border>

                <!-- Download Queue Panel (Slide Out) -->
                <Border Grid.Column="2" Background="{StaticResource BackgroundBrush}" Width="350"
                        Visibility="{Binding ShowDownloadQueue, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Download Queue" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="{Binding DownloadQueue.TotalCompleted, Mode=OneWay}"/>
                                        <Run Text=" completed,"/>
                                        <Run Text="{Binding DownloadQueue.TotalFailed, Mode=OneWay}"/>
                                        <Run Text=" failed"/>
                                    </TextBlock>
                                </StackPanel>
                                <Button Grid.Column="1" Content="âœ•" Style="{StaticResource NavButton}"
                                        Command="{Binding ToggleDownloadQueueCommand}" Width="32" Height="32"/>
                            </Grid>
                        </Border>

                        <!-- Queue List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                            <StackPanel>
                                <!-- Active Downloads -->
                                <TextBlock Text="Active" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="8,8,8,4"
                                           Visibility="{Binding DownloadQueue.ActiveDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}"/>
                                <ItemsControl ItemsSource="{Binding DownloadQueue.ActiveDownloads}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceLightBrush}" CornerRadius="8" Padding="12" Margin="4">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Mod.Name}" FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding StatusText}" FontSize="11"
                                                               Foreground="{StaticResource PrimaryBrush}"/>
                                                    <Grid Margin="0,6,0,0">
                                                        <ProgressBar Value="{Binding Progress}" Maximum="100"
                                                                     Style="{StaticResource ModernProgressBar}" Height="4"/>
                                                    </Grid>
                                                    <TextBlock Text="{Binding SpeedText}" FontSize="10"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Completed Downloads -->
                                <TextBlock Text="Completed" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBrush}" Margin="8,16,8,4"
                                           Visibility="{Binding DownloadQueue.CompletedDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}"/>
                                <ItemsControl ItemsSource="{Binding DownloadQueue.CompletedDownloads}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="10" Margin="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Mod.Name}" FontSize="12"
                                                               Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="1" Text="âœ“" FontSize="14" FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Failed Downloads -->
                                <TextBlock Text="Failed" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource ErrorBrush}" Margin="8,16,8,4"
                                           Visibility="{Binding DownloadQueue.FailedDownloads.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}"/>
                                <ItemsControl ItemsSource="{Binding DownloadQueue.FailedDownloads}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="10" Margin="4">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Mod.Name}" FontSize="12"
                                                               Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding ErrorMessage}" FontSize="10"
                                                               Foreground="{StaticResource ErrorBrush}" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <TextBlock Text="No downloads in queue"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,32,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding DownloadQueue.ActiveDownloads.Count}" Value="0"/>
                                                        <Condition Binding="{Binding DownloadQueue.CompletedDownloads.Count}" Value="0"/>
                                                        <Condition Binding="{Binding DownloadQueue.FailedDownloads.Count}" Value="0"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Actions -->
                        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Clear Completed" Style="{StaticResource SecondaryButton}"
                                        Command="{Binding ClearCompletedDownloadsCommand}" Padding="12,8" Margin="0,0,8,0"/>
                                <Button Content="Cancel All" Style="{StaticResource SecondaryButton}"
                                        Command="{Binding CancelAllDownloadsCommand}" Padding="12,8"
                                        Visibility="{Binding DownloadQueue.IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
